    <script type="text/javascript">
    function verify(id) {
        $.ajax({
            type: 'post',
            url: '?m=spider&a=verify',
            data: { id: id },
            dataType: 'json', 
            success: function(data) {
                if(data.status == 1){
                  window.location.reload();
                }else{
                    alert(data.info);
                }
            }
        });
    }
    </script>
